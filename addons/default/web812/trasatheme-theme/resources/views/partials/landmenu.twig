    <div class="row">

      {% for catalogue in entries('pages', 'pages').where({'parent_id': 17}).get() %}
        <div class="col-md-4 col-6">
          <a href="{{ url(catalogue.path) }}">
            <img src="{{ catalogue.kartinka_kataloga.url }}" class="center-block img-fluid my-3">
            <h3>{{ catalogue.title }}</h3>
            <p class="text-gray-dark">{{ catalogue.parent.title }}</p>
          </a>
        </div>
        
      {% endfor %}

      {% for catalogue in entries('pages', 'pages').where({'parent_id': 16}).get() %}
