            <img src="{{ catalogue.kartinka_kataloga.url }}" class="center-block img-fluid my-3 rounded-circle">
            <h3>{{ catalogue.title }}</h3>
            <p class="text-gray-dark">{{ catalogue.parent.title }}</p>
          </a>
        </div>
      {% endfor %}

      {% for catalogue in entries('pages', 'pages').where({'parent_id': 24}).get() %}
